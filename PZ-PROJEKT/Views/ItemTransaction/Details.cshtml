@model ItemTransaction

@{
    ViewData["Title"] = "Transaction";
}

<div class="container text-center my-5">
    <h2>Transaction @Model.Id - @Model.TransactionTime</h2>
    <h3>Total value: @Model.Total</h3>
    <div class="row">
        @if(@Model.Items.Count > 0) {
            for(int i = 0; i < Model.Items.Count; i++)
            {
                <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4">
                    <a asp-controller="Item" asp-action="Details" asp-route-id=@Model.Items[i].Item.Id>
                        <img src="@Url.Content($"/images/{@Model.Items[i].Item.ImagePath}")" class="img-thumbnail"/>
                    </a>
                    <a asp-controller="Items" asp-action="Details" asp-route-id=@Model.Items[i].Item.Id>
                        @Model.Items[i].Item.Name - @Model.Items[i].Item.Price
                    </a> 
                </div>
            }
        }
    </div>
</div>